<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="1"
                android:text="1"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="2"
                android:text="2"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="3"
                android:text="3"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="4"
                android:text="4"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="5"
                android:text="5"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="6"
                android:text="6"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="7"
                android:text="7"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="changeTheScreen"
                android:tag="8"
                android:text="8"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/zad1title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domek w gorach"
            android:textColor="#808080"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/zad1image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/obrazek" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008080"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zad1polub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#008080"
                android:onClick="zad1Polub"
                android:text="PULUB" />

            <Button
                android:id="@+id/zad1usun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#008080"
                android:onClick="zad1Usun"
                android:text="USUN" />

            <Button
                android:id="@+id/zad1zapisz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#008080"
                android:text="ZAPISZ" />
        </LinearLayout>

        <TextView
            android:id="@+id/zad1polubienia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 polubien"
            android:textAlignment="textEnd"
            android:textColor="#808080" />

        <View
            android:id="@+id/zad1divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#808080"
            android:foregroundTint="#808080" />

        <TextView
            android:id="@+id/zad1opis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zad1desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Odwiedz komfortowy domek w Sudentach, blisko do szlakow turystycznych"
            android:textColor="#808080" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>